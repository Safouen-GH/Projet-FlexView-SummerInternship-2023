{# templates/security/logout_confirm.html.twig #}

{% extends 'layouts/base.html.twig' %}

{% block title %}Confirm Logout{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <h1 class="h3 mb-3 font-weight-normal text-center">Confirm Logout</h1>
            <p class="text-center">Are you sure you want to log out?</p>
            <div class="text-center">
                <a href="{{ path('app_logout') }}" class="btn btn-danger">Logout</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
